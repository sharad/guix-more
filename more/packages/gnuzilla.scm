(define-public icecat-skia
  (package
    (inherit icecat)
    (name "icecat-skia")
    (inputs
     `(("skia" ,skia)
       ,@(package-inputs icecat)))
    (arguments (substitute-keyword-arguments (package-arguments icecat)
                 ((#:configure-flags flags)
                  `(cons* "--enable-skia" ,flags))))))
